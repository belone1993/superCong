
<title>相册列表 - Latte Cake Admin</title>

<!-- ajax layout which only needs content area -->
<div class="page-header">
    <h1>
        相册列表
        <small>
            <i class="ace-icon fa fa-angle-double-right"></i>
            分享是一种博爱的心境，学会分享，就学会了生活
        </small>
    </h1>
</div><!-- /.page-header -->

<div class="col-xs-12">

    <a href="#gallery/createAlbum" class="btn btn-app btn-primary no-radius">
        <i class="ace-icon fa fa-pencil-square-o bigger-230"></i>
        创建相册
    </a>

    <div class="clearfix">
        <div class="pull-right tableTools-container"></div>
    </div>

    <!-- div.dataTables_borderWrap -->
    <div>
        <table class="table table-striped table-bordered table-hover">
            <thead>
            <tr>
                <th>序号</th>
                <th>专辑名称</th>
                <th>描述</th>
                <th>相片数量</th>
                <th>发布时间</th>
                <th>更新时间</th>
                <th>状态</th>

                <th></th>
            </tr>
            </thead>

            <tbody>

            {% for key,album in albums if albums %}
                {% set No = (((page - 1) * 20) + 1) %}
                <tr id="album-{{ album.id }}">
                    {#<td class="center">#}
                    {#<label class="pos-rel">#}
                    {#<input type="checkbox" class="ace" />#}
                    {#<span class="lbl"></span>#}
                    {#</label>#}
                    {#</td>#}
                    <td>{{ No + key }}</td>
                    <td>
                        {{ album.title }}
                        {#<a target="_blank" href="{{ url('life_lifeInfo', {"id": post.id}) }}">{{ post.title|length > 8 ? post.title|slice(0, 8) ~ '...' : post.title }}</a>#}
                    </td>
                    <td>{{ album.description|slice(0, 16) }} ...</td>

                    <td>
                        <span class="badge badge-info">{{ album.photoNum }}</span>
                    </td>

                    <td>
                        {{ album.createdAt|date('Y/m/d H:i:s') }}
                    </td>
                    <td>
                        {{ album.createdAt|date('Y/m/d H:i:s') }}
                    </td>
                    <td>
                        {#{{ statusName[post.status] }}#}
                    </td>
                    <td>
                        <div class="hidden-sm hidden-xs action-buttons">
                            <a class="green" href="#gallery/editAlbum/{{ album.id }}">
                                <i class="ace-icon fa fa-pencil bigger-130"></i>
                            </a>

                            <a class="red removeArticle" data-href="#gallery/removeAlbum" data-id="{{ album.id }}">
                                <i class="ace-icon fa fa-trash-o bigger-130"></i>
                            </a>
                        </div>
                    </td>
                </tr>
            {% endfor %}
            </tbody>
        </table>
        <div class="col-xs-6">
            <div class="dataTables_info" id="dynamic-table_info" role="status" aria-live="polite">
                当前 {{ startPost }} 至 {{ endPost }} 共 {{ postTotal }} 条
            </div>
        </div>
        <div class="col-xs-6">
            <div class="dataTables_paginate paging_simple_numbers" id="dynamic-table_paginate">
                <ul class="pagination">
                    <li class="paginate_button previous disabled" aria-controls="dynamic-table" tabindex="0" id="dynamic-table_previous">
                        <a href="#">上一页</a>
                    </li>
                    {% for i in 1..pageTotal %}
                        <li class="paginate_button {% if page == i %}active{% endif %}" aria-controls="dynamic-table" tabindex="{{ i }}">
                            <a href="#life/grow/{{ i }}">{{ i }}</a>
                        </li>
                    {% endfor %}
                    <li class="paginate_button next" aria-controls="dynamic-table" tabindex="0" id="dynamic-table_next">
                        <a href="#">下一页</a>
                    </li>
                </ul>
            </div>
        </div>
    </div>
</div>
{#</div>#}

