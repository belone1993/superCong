<div class="col-lg-3">
    <div class="widget">
        <h5 class="widgetheading">Latest posts</h5>
        <ul class="link-list">
            {% for row in posts %}
                <li><a href="{{ url('post_detail', {'id': row.id}) }}">{{ row.title|length > 16 ? row.title|slice(0, 16) ~ '...' : row.title }}</a></li>
            {% endfor %}
        </ul>
    </div>
</div>