{% extends "AppBundle::default_layout.html.twig" %}

{% block pageTitle %}学无止镜{% endblock %}

{% block banner %}
    <section id="inner-headline">
        <div class="container">
            <div class="row">
                <div class="col-lg-12">
                    <ul class="breadcrumb">
                        <li><a href="{{ url('homepage') }}"><i class="fa fa-home"></i></a><i class="icon-angle-right"></i></li>
                        <li class="active">学无止镜</li>
                    </ul>
                </div>
            </div>
        </div>
    </section>
{% endblock %}
{% block content %}
    <section id="content">
        <div class="container">
            <div class="row">
                <div class="col-lg-8">
                    {% for key, post in posts if posts %}
                        <article>
                            <div class="post-image">
                                <div class="post-heading">
                                    <h3><a href="{{ url('post_detail', {"id": post.id}) }}">{{ post.title }}</a></h3>
                                </div>
                                {% if post.image|trim is not empty %}
                                    <img class="img-responsive img-hover" src="{{ source_url }}images/{{ post.createdAt|date('Y/m') }}/{{ post.image }}?imageView/1/w/740/h/240" alt=""/>
                                {% elseif post.images.count > 1 %}
                                    <div class="flexslider post-slider">
                                        <ul class="slides">
                                            {% for image in post.images %}
                                                <li>
                                                    <img src="{{ source_url }}images/{{ image.imageTime|date('Y/m') }}/{{ image.imageName }}?imageView/1/w/740/h/240">
                                                </li>
                                            {% endfor %}
                                        </ul>
                                    </div>
                                {% elseif post.images.count == 1 %}
                                    {% for image in post.images %}
                                        <img class="img-responsive img-hover" src="{{ source_url }}images/{{ image.imageTime|date('Y/m') }}/{{ image.imageName }}?imageView/1/w/740/h/240" alt=""/>
                                    {% endfor %}
                                {% endif %}
                            </div>
                            <p>
                                {{ post.description }}
                            </p>
                            <div class="bottom-article">
                                <ul class="meta-post">
                                    <li><i class="icon-calendar"></i><a href="{{ url('post_detail', {"id": post.id}) }}"> {{ post.createdAt|date() }}</a></li>
                                    <li><i class="icon-user"></i><a href="#"> super Cong</a></li>
                                    {#<li><i class="icon-folder-open"></i><a href="#"> Blog</a></li>#}
                                    <li><i class="icon-comments"></i><a href="{{ url('post_detail', {"id": post.id}) }}#comments">{{ post.reviews }} 评论</a></li>
                                </ul>
                                <a href="{{ url('post_detail', {"id": post.id}) }}" class="pull-right">继续阅读 <i class="icon-angle-right"></i></a>
                            </div>
                        </article>
                    {% endfor %}
                    <div id="pagination">
                        <span class="all"> {{ page }} / {{ postTotal }} 页</span>
                        {% for i in 1..postTotal %}
                            {% if i == page %}
                                <span class="current">{{ page }}</span>
                            {% else %}
                                <a href="{{ url('learn', {"page": i}) }}" class="inactive">{{ i }}</a>
                            {% endif %}
                        {% endfor %}
                    </div>
                </div>
                <div class="col-lg-4">
                    <aside class="right-sidebar">
                        {#{% set searchTitle = '路漫漫而修远兮，吾将上下而求索..' %}#}
                        {#{% include "AppBundle:Post:search.html.twig" %}#}
                        {#{{ render(controller('AppBundle:Category:bar')) }}#}
                        {{ render(controller('AppBundle:Post:topPost', {"action": 1})) }}
                        {#<div class="widget">#}
                            {#<h5 class="widgetheading">Popular tags</h5>#}
                            {#<ul class="tags">#}
                                {#<li><a href="#">Web design</a></li>#}
                                {#<li><a href="#">Trends</a></li>#}
                                {#<li><a href="#">Technology</a></li>#}
                                {#<li><a href="#">Internet</a></li>#}
                                {#<li><a href="#">Tutorial</a></li>#}
                                {#<li><a href="#">Development</a></li>#}
                            {#</ul>#}
                        {#</div>#}
                    </aside>
                </div>
            </div>
            <div class="row">
                <div class="col-lg-12">
                    <p>某一人似曾相识、某一刻似曾经历</p>
                </div>
            </div>
        </div>
    </section>
{% endblock %}

{% block Cong_javascripts %}
    <script src="{{ storage_url }}static/moderna/js/jquery.fancybox.pack.js"></script>
    <script src="{{ storage_url }}static/moderna/js/jquery.fancybox-media.js"></script>
    <script src="{{ storage_url }}static/moderna/js/jquery.flexslider.js"></script>
    <script>
        $('.post-slider').flexslider({
            // Primary Controls
            controlNav          : false,
            directionNav        : true,
            prevText            : "上一张",
            nextText            : "下一张",

            // Secondary Navigation
            keyboard            : true,
            multipleKeyboard    : false,
            mousewheel          : false,
            pausePlay           : false,
            pauseText           : '暂停',
            playText            : '开始',

            // Special properties
            controlsContainer   : "",
            manualControls      : "",
            sync                : "",
            asNavFor            : "",
        });
    </script>
{% endblock %}