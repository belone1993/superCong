{% extends "AppBundle::default_layout.html.twig" %}

{% block pageTitle %}学无止镜{% endblock %}

{% block banner %}
    <section id="inner-headline">
        <div class="container">
            <div class="row">
                <div class="col-lg-12">
                    <ul class="breadcrumb">
                        <li><a href="{{ url('homepage') }}"><i class="fa fa-home"></i></a><i class="icon-angle-right"></i></li>
                        <li class="active">学无止镜</li>
                    </ul>
                </div>
            </div>
        </div>
    </section>
{% endblock %}
{% block content %}
    <section id="content">
        <div class="container">
            <div class="row">
                <div class="col-lg-8">
                    {% for key, post in posts if posts %}
                        <article>
                            <div class="post-image">
                                <div class="post-heading">
                                    <h3><a href="{{ url('learn_learnInfo', {"id": post.id}) }}">{{ post.title }}</a></h3>
                                </div>
                                <img src="{{ source_url }}images/{{ post.createdAt|date('Y/m') }}/{{ post.image }}?imageView2/2/w/710" alt="" />
                            </div>
                            <p>
                                {{ post.description }}
                            </p>
                            <div class="bottom-article">
                                <ul class="meta-post">
                                    <li><i class="icon-calendar"></i><a href="{{ url('learn_learnInfo', {"id": post.id}) }}"> {{ post.createdAt|date() }}</a></li>
                                    <li><i class="icon-user"></i><a href="#"> super Cong</a></li>
                                    {#<li><i class="icon-folder-open"></i><a href="#"> Blog</a></li>#}
                                    <li><i class="icon-comments"></i><a href="{{ url('learn_learnInfo', {"id": post.id}) }}">4 评论</a></li>
                                </ul>
                                <a href="{{ url('learn_learnInfo', {"id": post.id}) }}" class="pull-right">继续阅读 <i class="icon-angle-right"></i></a>
                            </div>
                        </article>
                    {% endfor %}
                    <div id="pagination">
                        <span class="all"> {{ page }} / {{ postTotal }} 页</span>
                        {% for i in 1..postTotal %}
                            {% if i == page %}
                                <span class="current">{{ page }}</span>
                            {% else %}
                                <a href="{{ url('learn', {"page": i}) }}" class="inactive">{{ i }}</a>
                            {% endif %}
                        {% endfor %}
                    </div>
                </div>
                <div class="col-lg-4">
                    <aside class="right-sidebar">
                        {% set searchTitle = '路漫漫而修远兮，吾将上下而求索..' %}
                        {% include "AppBundle:Post:search.html.twig" %}
                        {{ render(controller('AppBundle:Category:bar')) }}
                        {{ render(controller('AppBundle:Post:topPost', {"action": 1})) }}
                        <div class="widget">
                            <h5 class="widgetheading">Popular tags</h5>
                            <ul class="tags">
                                <li><a href="#">Web design</a></li>
                                <li><a href="#">Trends</a></li>
                                <li><a href="#">Technology</a></li>
                                <li><a href="#">Internet</a></li>
                                <li><a href="#">Tutorial</a></li>
                                <li><a href="#">Development</a></li>
                            </ul>
                        </div>
                    </aside>
                </div>
            </div>
            <div class="row">
                <div class="col-lg-12">
                    <p>某一人似曾相识、某一刻似曾经历</p>
                </div>
            </div>
        </div>
    </section>
{% endblock %}